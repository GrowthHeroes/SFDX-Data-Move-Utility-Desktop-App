{
  "compilerOptions": {
    "module": "commonjs",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata":true,
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "javascripts",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "rootDir": "ts",
    "lib": [
      "dom",
      "es6",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "ts/**/*"
  ]
}